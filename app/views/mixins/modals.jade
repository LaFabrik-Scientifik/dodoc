mixin modals(typeOfModal)

  if( typeOfModal === 'addFolder')
    //////////////////////////////////////////////   ADD FOLDER  //////////////////////////////////

    div(id="modal-add-folder" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog")
      h2.popoverTitle
        | !{dodoc.lang.modal.newFolder}
      form(onsubmit='return false;' class='add-folder-form lead')
        input(type='text' class='new-folder' placeholder='Nom')
        input(type='submit' class='submit-new-folder js--submit-new-folder' value='Valider')
      +button( 'close', '', 'isCollapsed')

  if( typeOfModal === 'editFolder')
    //////////////////////////////////////////////   EDIT FOLDER  //////////////////////////////////

    div(id="modal-modify-folder" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog")
      h3#modalTitle.popoverTitle
        | !{dodoc.lang.modal.editFolder}
      form(onsubmit="return false;" class="modify-folder-form")
        input(type="text" class="modify-folder" value autofocus)
        select.modify-statut(name="statut")
          option(value='en cours')
            | !{dodoc.lang.modal.inprogress}
          option(value='terminé')
            | !{dodoc.lang.modal.finished}
        +button('deleteFolder', '', 'isCollapsed')
        input(type="submit" class="submit-modify-folder" value="Valider")
      +button( 'close', '', 'isCollapsed')

    div(id="modal-statut-alert" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog")
      p
        | !{dodoc.lang.modal.warningFinishedStatus}
      button.oui
        | !{dodoc.lang.ok}
      button.annuler(autofocus)
        | !{dodoc.lang.cancel}
      +button( 'close', '', 'isCollapsed')

    div(id="modal-delete-alert" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog")
      p
        | !{dodoc.lang.modal.sureToRemoveFolder}
      hr
      button.oui
        | !{dodoc.lang.yes}
      button.annuler(autofocus)
        | !{dodoc.lang.cancel}
      +button( 'close', '', 'isCollapsed')

  if( typeOfModal === 'addProject')
    //////////////////////////////////////////////   ADD PROJECT  //////////////////////////////////

    div(id="modal-add-project" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog")

    div(style="display:none;")
      h2.popoverTitle
        | !{dodoc.lang.modal.newProject}
      form(onsubmit='return false;')
        input(type='text' class='js--modal_name' placeholder=dodoc.lang.name autofocus)
        input#addImageProject(type="file" class="inputfile js--modal_inputfile inputfile-2" accept="image/*")
        label(for="addImageProject")
          | <svg xmlns="" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"></path></svg>
          span
            | !{dodoc.lang.modal.selectAnImage}
        hr
        input(type='submit' class='button_submit js--modal_submit' value='Valider')
      +button( 'close', '', 'isCollapsed')

  if( typeOfModal === 'editProject')
    //////////////////////////////////////////////   EDIT PROJECT  //////////////////////////////////

    div(id="modal-modify-project" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog")

    div(class="modal-modify-project_content" style="display:none;")
      h3#modalTitle.popoverTitle
        | !{dodoc.lang.modal.editProject}
      form(onsubmit='return false;' class='modify-project-form')
        input.js--modal_name(type='text' value='')
        select.modify-project-statut(name='statut')
          option(value='en cours')
            | !{dodoc.lang.modal.inprogress}
          option(value='terminé')
            | !{dodoc.lang.modal.finished}
        input#editImageProject(type="file" class="inputfile js--modal_inputfile inputfile-2" accept="image/*")
        label(for="editImageProject")
          | <svg xmlns="" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"></path></svg>
          span
            | !{dodoc.lang.modal.selectAnImage}
        hr
        input(type='submit' class="button_submit js--modal_submit" value='Valider')
        +button('deleteProject', '', '')
      +button( 'close', '', 'isCollapsed')

    //- ALERT CHANGE STATUT (IF STATUT FINISH)
    div(id="modal-statut-alert" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog")
      p
        | !{dodoc.lang.modal.warningFinishedStatus}
      hr
      button.oui
        | !{dodoc.lang.ok}
      button.annuler(autofocus)
        | !{dodoc.lang.cancel}
      +button( 'close', '', 'isCollapsed')
    //- ALERT SUPPRIMER UN DOSSIER
    div(id="modal-deleteproject-alert" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog")
      p
        | !{dodoc.lang.modal.sureToRemoveProject}
      hr
      button.oui
        | !{dodoc.lang.yes}
      button.annuler(autofocus)
        | !{dodoc.lang.cancel}
      +button( 'close', '', 'isCollapsed')

  if( typeOfModal === 'addPubli')
    //////////////////////////////////////////////   ADD PUBLI  //////////////////////////////////

    div(id="modal-add-publi" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog")

    div(style="display:none;")
      h2.popoverTitle
        | !{dodoc.lang.modal.newPubli}
      form(onsubmit='return false;')
        input(type='text' class='js--modal_name' placeholder=dodoc.lang.name autofocus)
        fieldset.templateSelector
          .txt-small_info
            | !{dodoc.lang.selectTemplate}
          - for (var i = 0; i < templates.length; i++) {
          label
            input.js--modal_template(type="radio" name="publiTemplate" value="#{templates[i]}" checked)
            img(src="/#{dodoc.publicationTemplateDirname}/#{templates[i]}/icone.svg")
            span #{templates[i]}
          - }
        hr
        input(type='submit' class='button_submit js--modal_submit' value='Valider')
      +button( 'close', '', 'isCollapsed')


  if( typeOfModal === 'editPubli')
    //////////////////////////////////////////////   EDIT PUBLI  //////////////////////////////////

    //- MODIFY PROJECT
    div(id="modal-modify-publi" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog")

    div(style="display:none;")
      h2.popoverTitle
        | !{dodoc.lang.modal.editPubli}
      form(onsubmit='return false;')
        input(type='text' class='js--modal_name' placeholder=dodoc.lang.name autofocus)
        fieldset.templateSelector
          .txt-small_info
            | !{dodoc.lang.selectTemplate}
          - for (var i = 0; i < templates.length; i++) {
          label
            input.js--modal_template(type="radio" name="publiTemplate" value="#{templates[i]}" checked)
            img(src="/#{dodoc.publicationTemplateDirname}/#{templates[i]}/icone.svg")
            span #{templates[i]}
          - }
        hr
        input(type='submit' class='button_submit js--modal_submit' value='Valider')
      +button( 'close', '', 'isCollapsed')


  if( typeOfModal === 'importMedia')
    //////////////////////////////////////////////   IMPORT MEDIA  //////////////////////////////////

    div(id="modal-add-local" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog")
      h2#modalTitle.popoverTitle
        | !{dodoc.lang.modal.importAFile}
      form(onsubmit='return false;' class='add-media-form')
        input#importMedia(type="file" class="inputfile js--modal_inputfile inputfile-2" accept="image/*,video/*")
        label(for="importMedia")
          | <svg xmlns="" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"></path></svg>
          span
            | !{dodoc.lang.modal.importAMedia}
      small
        | !{dodoc.lang.modal.acceptedFormats}
      hr
      input(type='submit' class="button_submit js--modal_submit" value='Valider')
      +button( 'close', '', 'isCollapsed')

  if( typeOfModal === 'addText')
    //////////////////////////////////////////////   ADD TEXT  //////////////////////////////////

    div(id="modal-add-text" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog")
      h2#modalTitle.popoverTitle
        | !{dodoc.lang.modal.addText}
      form(onsubmit='return false;' class='add-text-form')
        textarea.js--submit-new-text_text(placeholder="Ajouter du texte ici")
        hr
        input(type='submit' class='js--submit-new-text' value='Valider')
      +button( 'close', '', 'isCollapsed')


  if( typeOfModal === 'bigMedia')
    //////////////////////////////////////////////   BIG MEDIA  //////////////////////////////////

    div(id="modal-media-view" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog")
      .big-mediaContent
      .big-mediaNav
        button.big-mediaNav-arrow.big-mediaNav-arrow_left.js--big-mediaNav-prev
        button.big-mediaNav-arrow.big-mediaNav-arrow_right.js--big-mediaNav-next
      +button( 'close', '', 'isCollapsed')

    //- ALERT SUPPRIMER UN Media
    div(id="modal-delete-alert-media" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog")
      p
        | !{dodoc.lang.modal.sureRemoveMedia}
      button.oui.button_coteacote
        | !{dodoc.lang.yes}
      button.annuler.button_coteacote
        | !{dodoc.lang.cancel}
      +button( 'close', '', 'isCollapsed')


  if( typeOfModal === 'mediaForm')
    //////////////////////////////////////////////   MEDIA FORM (inside bigmedia)  //////////////////////////////////

    form(onsubmit='return false;' class='add-media-data lead')
      label
        | !{dodoc.lang.modal.informations}
      textarea.mediaContent--textOfTextmedia.js--mediaInformations(type='text')
    h3.txt-small_info
      | !{dodoc.lang.modal.pathofmedia}
      .js--mediaFullPath
    hr
    +button('favButton', '', '')
    +button('deleteMediaBibli', '', '')
    input.js--submit-add-media-data(type='submit' value='Valider')

  if( typeOfModal === 'mediaForm_txt')
    //////////////////////////////////////////////   MEDIA FORM TEXT  //////////////////////////////////

    form(onsubmit='return false;' class='add-media-text lead')
      textarea.mediaContent--textOfTextmedia.js--submit-new-text_text(placeholder="Ajouter du texte ici")
    h3.txt-small_info
      | !{dodoc.lang.modal.pathofmedia}
      .js--mediaFullPath
    hr
    +button('favButton', '', '')
    +button('deleteMediaBibli', '', '')
    input.js--submit-view-text-modify(type='submit' value='Valider')

