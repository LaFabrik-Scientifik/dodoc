{
  "name": "dodoc",
  "version": "4.0.1",
  "description": "Dodoc is a documentation tool for creativity.",
  "main": "main.js",
  "scripts": {
    "start": "electron main",
    "debug": "nodemon  -e js,json --ignore app/client/ --ignore app/views/ --exec 'electron main --debug --verbose'",
    "package": "electron-packager ./ dodoc --all --out ~/Desktop/dodoc --overwrite --icon=./app/i_logo.svg.icns",
    "pack": "build --dir",
    "dist": "build --w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/l-atelier-des-chercheurs/dodoc.git"
  },
  "author": "Lâ€™Atelier des Chercheurs",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/l-atelier-des-chercheurs/dodoc/issues"
  },


  "homepage": "https://github.com/l-atelier-des-chercheurs/dodoc#readme",
  "build": {
    "appId": "dodoc",
    "mac": {
      "category": "public.app-category.education"
    },
    "win": {
      "iconUrl": "(windows-only) https link to icon"
    }
  },

  "dependencies": {
    "electron-context-menu": "^0.8.0",
    "flags": "^0.1.3",
    "fs-extra": "^1.0.0",
    "gulp-util": "^3.0.7"
  },
  "devDependencies": {
    "electron": "^1.4.8",
    "electron-builder": "^8.6.0",
    "electron-packager": "^8.4.0",
    "nodemon": "^1.11.0"
  }
}
