{
  "name": "dodoc",
  "version": "4.0.1",
  "description": "Dodoc is a documentation tool for creativity.",
  "main": "main.js",
  "scripts": {
    "start": "electron main",
    "debug": "nodemon  -e js,json --ignore app/client/ --ignore app/views/ --exec \"electron main --debug --verbose\"",
    "pack": "build --dir",
    "dist": "build",
    "postinstall": "install-app-deps",

    "pack:osx": "electron-packager . dodoc --out=dist/osx --platform=darwin --arch=x64 --icon=build/icon.icns",
    "pack:win64": "electron-packager . dodoc --out=dist/win --platform=win32 --arch=x64 --icon=build/icon.ico",
    "package": "npm run pack:osx && npm run pack:win64"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/l-atelier-des-chercheurs/dodoc.git"
  },
  "author": "Lâ€™Atelier des Chercheurs",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/l-atelier-des-chercheurs/dodoc/issues"
  },
  "homepage": "https://github.com/l-atelier-des-chercheurs/dodoc#readme",
  "build": {
    "appId": "dodoc",
    "mac": {
      "category": "public.app-category.education"
    },
    "win": {
      "iconUrl": "(windows-only) https link to icon"
    }
  },
  "dependencies": {
    "electron-context-menu": "^0.8.0",
    "flags": "^0.1.3",
    "fs-extra": "^1.0.0",
    "gulp-util": "^3.0.7"
  },
  "devDependencies": {
    "electron": "^1.4.8",
    "electron-builder": "^10.8.1",
    "electron-packager": "^8.4.0",
    "nodemon": "^1.11.0"
  }
}
